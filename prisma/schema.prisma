// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id
  email     String   @unique
  name      String
  phone     String
  password  String
  role      Int // 0: PROPRIETARIO, 1: CLIENTE
  checked   Boolean  @default(false)
  status    Int // 0: ATIVO, 1: INATIVO
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  spaces        Space[]
  subscriptions Subscription[]

  @@map("users")
}

model Space {
  id                String   @id
  owner_id          String
  title             String
  description       String
  capacity          Int
  price_per_weekend Float?
  price_per_day     Float?
  comfort           String[] // Armazenado como array de strings no Postgres
  images            String[] // Armazenado como array de strings
  status            Int // 0: ATIVO, 1: INATIVO

  // Endere√ßo (Flattened ou poderia ser outra tabela, aqui flattened por simplicidade do MVP)
  street       String
  number       String
  complement   String?
  neighborhood String
  city         String
  state        String
  zipcode      String
  country      String

  owner User @relation(fields: [owner_id], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("spaces")
}

model Subscription {
  id                String    @id
  user_id           String
  plan              String
  price             Float
  status            String // TRIAL, ACTIVE, SUSPENDED
  trial_until       DateTime?
  next_billing_date DateTime?

  user User @relation(fields: [user_id], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("subscriptions")
}
